{
    "manifest_version": 2,
    "name": "Compliant",
    "description": "Make r/Bitcoin bank and investor compliant.",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "http://*.reddit.com/r/bitcoin/*",
                "https://*.reddit.com/r/bitcoin/*",
                "http://reddit.com/r/bitcoin/*",
                "https://reddit.com/r/bitcoin/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
       "*.png"
    ]
}
